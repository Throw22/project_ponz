<header class="text-center">
    <h1>Welcome to Doge's Shop</h1>
    <p>Much Wow!</p>
    {{> images/dogeshopkeep }}
</header>

<table class="table table-bordered text-center">
    <tbody>
      <tr>
        <td>Items:</td>
        <td>{{> icons/pokeball }}</td>
        <td>{{> icons/nailpolish}}</td>
        <td>{{> icons/bone}}</td>
        <td>{{> icons/pancakes}}</td>
        <td>{{> icons/sashimi}}</td>
      </tr>
      <tr>
        <td>Coins:</td>
        <td><button form="item1" type="submit">50 <span class="glyphicon glyphicon-ruble"></span></button></td>
        <td>25 <span class="glyphicon glyphicon-ruble"></td>
        <td>100 <span class="glyphicon glyphicon-ruble"></td>
        <td>90 <span class="glyphicon glyphicon-ruble"></td>
        <td>45 <span class="glyphicon glyphicon-ruble"></td>
      </tr>
    </tbody>
  </table>
  
  
  
  
  
  
  <form id="item1" method="post" action="/shop/buy/{{item.id}}">
      <input type="hidden" name="price" value={{item.price}}>
  </form>
